{
	"name": "@buape/carbon",
	"description": "Carbon monorepo",
	"scripts": {
		"build": "turbo run build",
		"dev": "dotenv -- turbo run dev",
		"lint": "biome check . --apply",
		"preinstall": "npx only-allow pnpm",
		"start": "dotenv -- turbo run start",
		"test": "vitest",
		"generate": "turbo gen create-package",
		"web": "turbo run web:start --filter website",
		"web:build": "turbo run web:build --filter website"
	},
	"dependencies": {
		"@turbo/gen": "^1.13.2",
		"dotenv-cli": "^7.4.1",
		"dotenv-mono": "^1.3.14",
		"tsc-watch": "^6.2.0",
		"turbo": "1.13.2",
		"typedoc": "^0.25.13",
		"vitest": "^1.5.0"
	},
	"devDependencies": {
		"@biomejs/biome": "1.7.1",
		"pierre": "^2.0.31",
		"typescript": "5.4.5"
	}
}
