{
	"name": "monorepo",
	"description": "Carbon monorepo",
	"private": true,
	"scripts": {
		"build": "turbo run build",
		"cf": "pnpm build --filter @buape/carbon... && turbo run dev --filter cloudo",
		"dev": "env-cmd -- turbo run dev --env-mode loose --filter !cloudo",
		"generate": "turbo gen create-package",
		"lint": "biome check . --apply",
		"preinstall": "npx only-allow pnpm",
		"start": "env-cmd -- turbo run start --env-mode loose",
		"test": "vitest",
		"web": "turbo run web:start --filter website",
		"web:build": "turbo run web:build --filter website"
	},
	"dependencies": {
		"@turbo/gen": "2.0.14",
		"@net-tech-/env-cmd": "1.0.3",
		"tsc-watch": "6.2.0",
		"turbo": "2.0.14",
		"typedoc": "0.26.6",
		"vitest": "2.0.5"
	},
	"devDependencies": {
		"@biomejs/biome": "1.8.3",
		"typescript": "5.4.2"
	},
	"packageManager": "pnpm@9.9.0"
}
