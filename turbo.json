{
	"$schema": "https://turbo.build/schema.json",
	"tasks": {
		"build": {
			"outputs": ["dist/**"],
			"cache": true,
			"dependsOn": ["^build"]
		},
		"test": {},
		"start": {
			"dependsOn": ["build"]
		},
		"dev": {
			"persistent": true
		},
		"web:build": {
			"dependsOn": ["build", "docs"]
		},
		"web:dev": {},
		"docs": {
			"dependsOn": ["build", "^docs"],
			"inputs": [
				"src/**",
				"typedoc.json",
				"../../typedoc.json",
				"../../type-aliases-meta.sh",
				"../../type-aliases.meta.json",
				"../../formatter.mjs"
			],
			"outputs": ["docs/**"]
		}
	}
}
